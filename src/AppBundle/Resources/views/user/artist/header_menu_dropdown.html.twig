{% set user = 'artist' %}
{% set name = artist.name ? artist.name : app.user.username %}
<li class="nav-item dropdown user-menu sing-out">
    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown2" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{{ name }}</a>
    <div class="dropdown-menu" aria-labelledby="navbarDropdown2">
        <a href="{{ path(user ~ '_edit', {'id': app.user.id}) }}"
           class="dropdown-item {{ app.request.get('_route') == user ~ '_edit' ? 'active' : '' }}">
            <i class="icon icon-edit"></i> {{ 'header.menu.edit_profile'|trans }}
        </a>

        <a href="{{ path(user ~ '_edit_settings', {'id': app.user.id}) }}"
           class="dropdown-item {{ app.request.get('_route') == user ~ '_edit_settings' ? 'active' : '' }}">
            <i class="icon icon-settings"></i> {{ 'header.menu.settings'|trans }}
        </a>

        <a href="{{ path(user ~ '_edit_booking_all', {'id': app.user.id}) }}"
           class="dropdown-item {{ app.request.get('_route') == user ~ '_edit_booking_all' ? 'active' : '' }}">
            <i class="icon icon-history"></i> {{ 'header.menu.bookings'|trans }}
        </a>

        <a href="{{ path(user ~ '_edit_communication', {'id': app.user.id}) }}"
           class="dropdown-item communication {{ app.request.get('_route') == user ~ '_edit_communication' ? 'active' : '' }}">
            <i class="icon icon-communication"></i> {{ 'header.menu.communication' | trans({'%count%': '<i></i>'}) | raw }}
        </a>

        <a id="calendar" href="{{ path(user ~ '_edit_calendar', {'id': app.user.id}) }}"
           class="dropdown-item {{ app.request.get('_route') == user ~ '_edit_calendar' ? 'active' : '' }}">
            <i class="icon icon-calendar"></i> {{ 'header.menu.calendar'|trans }}
        </a>

        <a href="{{ path(user ~ '_edit_media', {'id': app.user.id}) }}"
           class="dropdown-item {{ app.request.get('_route') == user ~ '_edit_media' ? 'active' : '' }}">
            <i class="icon icon-media"></i> {{ 'header.menu.media'|trans }}
        </a>

