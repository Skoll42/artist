{% extends '@App/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/profile-policy.css') }}">
{% endblock stylesheets %}

{% block content %}
    <section class="user-profile" style="min-height: 76.2vh;">

        <div class="container">

            <div class="row-offcanvas row-offcanvas-left">
                {% include '@App/controls/user_left_menu.html.twig' %}
                <div id="main">
                    <div class="col-md-12">
                        <p class="d-lg-none">
                            <button type="button" class="btn" data-toggle="offcanvas">
                                User Menu
                            </button>
                        </p>

                        <div class="row">
                            <div class="col-12 title">Cancellation Policy</div>
                            <hr />
                        </div>

                        <div class="form-group row">
                            <div class="col-12">
                                <label class="cancel-policy">
                                    <input type="radio" name="cancellation-policy" value="1" id="cancellation-policy" {{ policy == 1 ? 'checked="checked"' : '' }}>
                                    <span class="checkmark"></span>
                                    <div class="policy-title">Strict (grace period): Full refund if cancellation is within 48 hours of booking</div>

                                    <ul>
                                        <li>Money are always refunded if the reservation is canceled before check-in.</li>
                                        <li>If there is a complaint from either party, notice must be given to Artist Next Door within 24 hours of booking.</li>
                                        <li>Artist Next Door will mediate when necessary, and has the final say in all disputes.</li>
                                    </ul>
                                </label>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-12">
                                <label class="cancel-policy">
                                    <input type="radio" name="cancellation-policy" value="2" id="cancellation-policy" {{ policy == 2 ? 'checked="checked"' : '' }}>
                                    <span class="checkmark"></span>
                                    <div class="policy-title">Strict: 50% refund up until 1 week prior to booking</div>

                                    <ul>
                                        <li>If there is a complaint from either party, notice must be given to Artist Next Door within 24 hours of booking.</li>
                                        <li>Artist Next Door will mediate when necessary, and has the final say in all disputes.</li>
                                    </ul>
                                </label>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-12">
                                <label class="cancel-policy">
                                    <input type="radio" name="cancellation-policy" value="3" id="cancellation-policy" {{ policy == 3 ? 'checked="checked"' : '' }}>
                                    <span class="checkmark"></span>
                                    <div class="policy-title">Super Strict 30 Days: 50% refund up until 30 days prior to booking</div>

                                    <ul>
                                        <li>Money are always refunded if the reservation is canceled before check-in.</li>
                                        <li>If there is a complaint from either party, notice must be given to Artist Next Door within 24 hours of booking.</li>
                                        <li>Artist Next Door will mediate when necessary, and has the final say in all disputes.</li>
                                    </ul>
                                </label>
                            </div>
                        </div>

                        <div class="row bottom-profile">
                            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-xl-3 profile-label"></div>
                            <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 col-xl-9 profile-input">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-8 col-xl-8"></div>
                                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4 col-xl-4">
                                        <button type="button" class="save-profile save-policy" data-user-id="{{ app.user.id }}">Save</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!--/row-offcanvas -->

        </div>

    </section>
{% endblock content %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/profile-policy.js') }}"></script>
    <script>
        $(document).ready(function () {
            $('[data-toggle=offcanvas]').click(function() {
                $('.row-offcanvas').toggleClass('active');
            });
        });
    </script>
{% endblock javascripts %}